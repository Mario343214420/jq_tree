html,body,.main
  height: 100%
.main
  .main-wrapper
    height: 100%
    position relative
    width: 1200px
    margin 0 auto
    overflow hidden
    .tree-container
      height: 100%
      position absolute
      width 160px
      left 0
      top: 0
      background-color: #fff
      padding-left: 40px
      font-size: 18px
      line-height: 30px
      text-align center
      z-index 10

      box-shadow 4px -4px 8px #979797
      .title
        color #fff
        width 160px
        padding-right: 40px
        height: 40px
        .title-text
          display inline-block
          width: 100%
          background-color: #272f44
        .title-btn
          cursor pointer
          display inline-block
          position relative
          right -120px
          height: 30px
          width: 60px
          top: -24px
          line-height: 30px
          background-color: gray
          -webkit-border-radius: 10px
          -moz-border-radius: 10px
          border-radius: 10px
          color white
          font-size: 14px
          &:hover
            background-color: #dedede
            color #1a1a1a
      .tree-inner
        line-height: 36px
        .tree-item
          padding: 4px 10px
          overflow hidden
          line-height: 30px
          .child-tip
            margin-right 8px
          .base-name
            font-weight: 700
          .tree-child
            padding-left 20px


    .map-container
      height: 100%
      position absolute
      width: 1200px
      right: 0
      top: 0
      background-color: #f5f5f5
      .map-inner
        position relative
        .tip-bar
          position absolute
          right: 20px
          top: 20px
          background-color: #fdfdfd
          padding 0 10px
          -webkit-border-radius: 4px
          -moz-border-radius: 4px
          border-radius: 4px
          box-shadow 1px 1px 4px 1px #979797
          span
            line-height: 36px
            color #1a1a1a
            padding 0 10px

          .tip-btn
            cursor pointer
            display inline-block
            position absolute
            right 205px
            top 4px
            height: 30px
            width: 60px
            line-height: 30px
            background-color: gray
            -webkit-border-radius: 10px
            -moz-border-radius: 10px
            border-radius: 10px
            color white
            font-size: 14px
            text-align center
            &:hover
              background-color: #dedede
              color #1a1a1a
.tree-btn
  padding-left 10px
.toggle-flag
  padding: 0 20px;

.jstree-default .jstree-themeicon
  background: none

